{
  "ForgeWire Action": {
    "prefix": "fw-action",
    "body": [
      "#[Action]",
      "public function ${1:actionName}(): void",
      "{",
      "    $0",
      "}"
    ],
    "description": "Create a ForgeWire action method"
  },
  "ForgeWire Action with Submit": {
    "prefix": "fw-action-submit",
    "body": [
      "#[Action(submit: true)]",
      "public function ${1:actionName}(): void",
      "{",
      "    $0",
      "}"
    ],
    "description": "Create a ForgeWire action method with submit flag"
  },
  "ForgeWire State": {
    "prefix": "fw-state",
    "body": [
      "#[State]",
      "public ${1:string} \\$${2:propertyName} = ${3:null};"
    ],
    "description": "Create a ForgeWire state property"
  },
  "ForgeWire Shared State": {
    "prefix": "fw-state-shared",
    "body": [
      "#[State(shared: true)]",
      "public ${1:string} \\$${2:propertyName} = ${3:null};"
    ],
    "description": "Create a shared ForgeWire state property"
  },
  "ForgeWire Reactive Controller": {
    "prefix": "fw-reactive",
    "body": [
      "use App\\Modules\\ForgeWire\\Attributes\\Reactive;",
      "use App\\Modules\\ForgeWire\\Attributes\\Action;",
      "use App\\Modules\\ForgeWire\\Attributes\\State;",
      "",
      "#[Reactive]",
      "final class ${1:ControllerName}",
      "{",
      "    #[State]",
      "    public string \\$value = '';",
      "",
      "    #[Action]",
      "    public function ${2:increment}(): void",
      "    {",
      "        $0",
      "    }",
      "}"
    ],
    "description": "Create a ForgeWire reactive controller class"
  },
  "ForgeWire Computed": {
    "prefix": "fw-computed",
    "body": [
      "#[Computed]",
      "public function ${1:computedProperty}(): ${2:string}",
      "{",
      "    return $0;",
      "}"
    ],
    "description": "Create a ForgeWire computed property"
  }
}
